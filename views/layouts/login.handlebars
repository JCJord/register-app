<link rel="stylesheet" href="/css/login.css" />
<div class="wrapper">
      <div class="container form-container">
        {{>_msg}}
        <p>Account</p>
        <h1>Login</h1>
        
        <form action="/users/login" method="post">
          <div class="form-group">
            <label for="exampleInputEmail1" class="input-header"
              >Email address</label
            >
            <input
              type="email"
              class="form-control"
              id="exampleInputEmail1"
              placeholder="Enter email"
              name="email"
            />
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1" class="input-header"
              >Password</label
            >
            <input
              type="password"
              class="form-control"
              id="exampleInputPassword1"
              placeholder="Password"
              name="password"
            />
          </div>
          <div class="form-check">
            

            <label class="login-link">
              Don't have an account? <a href="signup">Click here</a></label
            >
          </div>

          <button type="submit" class="btn btn-dark  btn-form">Login</button>
        </form>

        <div class="loader-wrapper">
         <div class="spinner6"><div></div></div>
      </div>
      </div>
    </div>